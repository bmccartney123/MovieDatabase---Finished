<UserControl x:Class="MovieDatabase.GenreControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MovieDatabase"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <GroupBox Header="Genres" Margin="0 0 5 0">
        <WrapPanel>
            <CheckBox x:Name="Comedy" Content="Comedy" Margin="5" />
            <CheckBox x:Name="Romance" Content="Romance" Margin="5" />
            <CheckBox x:Name="Action" Content="Action" Margin="5" />
            <CheckBox x:Name="Thriller" Content="Thriller" Margin="5" />
            <CheckBox x:Name="Family" Content="Family" Margin="5" />
            <CheckBox x:Name="Horror" Content="Horror" Margin="5" />
            <CheckBox x:Name="Western" Content="Western" Margin="5" />
            <CheckBox x:Name="SciFi" Content="Sci-Fi" Margin="5" />
            <CheckBox x:Name="War" Content="War" Margin="5" />

        </WrapPanel>
    </GroupBox>
</UserControl>
