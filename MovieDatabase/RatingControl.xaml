<UserControl x:Class="MovieDatabase.RatingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MovieDatabase"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <GroupBox Header="Rating" Margin="0 0 5 0">
        <WrapPanel>
            <RadioButton x:Name="Rb1" Content="1 "/>
            <RadioButton x:Name="Rb2" Content="2 "/>
            <RadioButton x:Name="Rb3" Content="3 "/>
            <RadioButton x:Name="Rb4" Content="4 "/>
            <RadioButton x:Name="Rb5" Content="5 "/>

        </WrapPanel>
    </GroupBox>
</UserControl>
